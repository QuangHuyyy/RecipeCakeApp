<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cv_itemCakePopular"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="8dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/iv_imgCakePopular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/cakebg" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_favoritePopular"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:button="@null"
                android:checked="false"
                android:background="@drawable/ic_favorite_border"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_cakePopularName"
            android:layout_below="@+id/cv_img"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="Cake name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_cakePopularAuthor"
            android:text="Cake author"
            android:layout_below="@+id/txt_cakePopularName"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_cakePopularTime"
            android:text="20 Min"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_cakePopularName"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>