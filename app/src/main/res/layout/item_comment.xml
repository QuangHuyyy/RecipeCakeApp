<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginBottom="25dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_imgUserComment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cakebg"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_nameComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User 1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
<!--        <TextView-->
<!--            android:id="@+id/txt_timeComment"-->
<!--            android:text="15 minutes ago"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/txt_contentComment"
            android:layout_below="@+id/txt_nameComment"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>